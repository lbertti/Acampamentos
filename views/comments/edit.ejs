<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Editar comentário</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <textarea class="form-control" aria-label="With textarea" name="comment[text]" placeholder="Escreva seu comentário aqui."><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button  class="btn btn-lg btn-primary btn-block" class="btn- btn-lg btn-default">Salvar</button>
                </div>
            </form>
            <a href="/campgrounds">Voltar</a>
        </div>
    </div>
</div>



