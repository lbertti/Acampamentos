
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Editar dados do acampamento <em><%=campground.name%></em></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="Nome do acampamento" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="Preço" min="0.01" step="0.01" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="URL da Imagem do acampamento" value="<%=campground.image%>">
                </div>

                <div class="form-group">
                  <textarea class="form-control" aria-label="With textarea" name="campground[description]" placeholder="Descrição sobre o acampamento"><%=campground.description%></textarea>
                </div>
                <div class="form-group">
                    <button  class="btn btn-lg btn-primary btn-block" class="btn- btn-lg btn-default">Salvar</button>
                </div>
            </form>
            <p><a href="/campgrounds">Voltar</a></p>
            <div class="col-md-9">
                <div class="badge badge-secondary">Imagem atual:</div>
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= campground.image %>"></image>
                </div>
            </div>
        </div>
    </div>
</div>



<% include ../partials/footer %>